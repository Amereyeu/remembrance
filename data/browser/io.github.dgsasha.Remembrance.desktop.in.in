[Desktop Entry]
Type=Application
Name=Reminders
Comment=Set reminders for yourself
Exec=@BINDIR@/@APP_EXECUTABLE@
Icon=@APP_ID@
Terminal=false
StartupWMClass=@APP_ID@
StartupNotify=true
X-SingleMainWindow=true
Categories=GNOME;GTK;Office;ProjectManagement;
Keywords=Todo;Productivity;Task;Planning;Planner;Time;Management;Reminder;Remembrance;Reminders;
X-GNOME-UsesNotifications=true
Actions=Upcoming;Past;Completed;

[Desktop Action Upcoming]
Name=Upcoming Reminders
Exec=@BINDIR@/@APP_EXECUTABLE@ --page=upcoming

[Desktop Action Past]
Name=Past Reminders
Exec=@BINDIR@/@APP_EXECUTABLE@ --page=past

[Desktop Action Completed]
Name=Completed Reminders
Exec=@BINDIR@/@APP_EXECUTABLE@ --page=completed
