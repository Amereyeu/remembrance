[Desktop Entry]
Type=Application
Name=Remembrance
Comment=A reminder app for Linux
Exec=@BINDIR@/@APP_EXECUTABLE@
Icon=@APP_ID@
Terminal=false
StartupWMClass=@APP_ID@
StartupNotify=true
DBusActivatable=true
X-SingleMainWindow=true
Categories=GNOME;GTK;Office;ProjectManagement;
Keywords=Todo;Productivity;Task;Planning;Planner;Time;Management;Reminder;Remembrance;
Actions=Upcoming;Overdue;Completed;

[Desktop Action Upcoming]
Name=Upcoming Reminders
Exec=@BINDIR@/@APP_EXECUTABLE@ --page upcoming

[Desktop Action Overdue]
Name=Overdue Reminders
Exec=@BINDIR@/@APP_EXECUTABLE@ --page overdue

[Desktop Action Completed]
Name=Completed Reminders
Exec=@BINDIR@/@APP_EXECUTABLE@ --page completed
