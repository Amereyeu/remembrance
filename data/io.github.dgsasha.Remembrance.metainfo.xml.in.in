<component type="desktop-application">
  <content_rating type="oars-1.1"/>

  <developer_name translatable="no">Sasha Hale</developer_name>
  <update_contact>dgsasha04_at_gmail.com</update_contact>

  <name>Reminders</name>
  <summary>Set reminders for yourself</summary>

  <description>
    <p>What you can do with Reminders:</p>
    <ul>
      <li>Set recurring reminders</li>
      <li>Schedule notifications</li>
      <li>Sort, filter, and search for reminders</li>
      <li>Organize reminders using lists</li>
      <li>Optionally sync with Microsoft To Do</li>
    </ul>
  </description>

  <id>@APP_ID@</id>
  <launchable type="desktop-id">@APP_ID@.desktop</launchable>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <provides>
    <binary>@APP_EXECUTABLE@</binary>
    <dbus type="session">io.github.dgsasha.Remembrance.Service1</dbus>
  </provides>

  <requires>
    <display_length compare="ge">360</display_length>
    <internet>offline-only</internet>
  </requires>

  <recommends>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </recommends>

  <categories>
    <category>GNOME</category>
    <category>GTK</category>
    <category>Office</category>
    <category>ProjectManagement</category>
  </categories>

  <keywords>
    <keyword>Todo</keyword>
    <keyword>Productivity</keyword>
    <keyword>Task</keyword>
    <keyword>Planning</keyword>
    <keyword>Planner</keyword>
    <keyword>Time</keyword>
    <keyword>Management</keyword>
    <keyword>Reminder</keyword>
    <keyword>Remembrance</keyword>
    <keyword>Reminders</keyword>
  </keywords>

  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/dgsasha/remembrance/577612554fe232d8edf290e097d3e22dbdaed507/screenshot-dark.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/dgsasha/remembrance/577612554fe232d8edf290e097d3e22dbdaed507/screenshot-light.png</image>
    </screenshot>
  </screenshots>

  <translation type="gettext">@APP_EXECUTABLE@</translation>

  <url type="translate">https://hosted.weblate.org/engage/reminders</url>
  <url type="homepage">https://github.com/dgsasha/remembrance</url>
  <url type="bugtracker">https://github.com/dgsasha/remembrance/issues</url>
  <releases>
    <release version="2.0" date="2023-04-1">
      <description>
        <ul>
          <li>Add support for creating and editing task lists</li>
          <li>Add support for syncing with Microsoft To Do</li>
          <li>Reduced memory usage</li>
          <li>Redesigned some UI elements</li>
          <li>Better support for mobile devices</li>
          <li>Better error dialogs</li>
          <li>Fix some issues with the backend</li>
        </ul>
      </description>
    </release>
    <release version="1.5" date="2023-03-10">
      <description>
        <ul>
          <li>Some small UI improvements.</li>
        </ul>
      </description>
    </release>
    <release version="1.4" date="2023-03-10">
      <description>
        <ul>
          <li>Fix issue where app can corrupt or lose its data.</li>
        </ul>
      </description>
    </release>
  </releases>
</component>
